@section Styles {
       #map_canvas { height: 600px !important;  }
}

<div class="container">

    <div id="map_canvas" class="col-sm-12">   </div>
</div>
<script type="text/javascript">
    function initialize() {
        var latlng = new google.maps.LatLng(-12.463410, 130.857035);
        var options = {
            zoom: 16, center: latlng,
            mapTypeId: google.maps.MapTypeId.G_NORMAL_MAP
        };
        var map = new google.maps.Map(document.getElementById
			("map_canvas"), options);

        var myLatlng = new google.maps.LatLng(-12.463365, 130.843754);
        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Xtreme Caffeine Cafe'
        });

        marker.setIcon('http://maps.google.com/mapfiles/ms/icons/green-dot.png')

        var infowindow = new google.maps.InfoWindow({
            content: "<div class='col-sm-10'><h4 class=''>Xtreme Caffeine  &nbsp; &nbsp; &nbsp; &nbsp;</h4> " + "<div><small>Opening hours: </br>" +
              "Mon - Fri: 7am - 3pm </br> Saturday: 7am - 1pm " + "<small></div></div>"
        });

        google.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });   
    
        infowindow.open(map, marker);
    }
    $(function () {
        initialize();
    });

</script>


